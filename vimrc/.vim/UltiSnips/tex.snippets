\newglossaryentry{${1:label}} %{{{
{
  name = {${2:nom de l'entrée}},
  description = {${3:description de l'entrée}},
  sort = {${4:terme pour le classement alphabétique de l'entrée}},
} %}}}

$0
endsnippet

