snippet figure "Ajoute une figure centrée dans la page en largeur" !b
   \begin{figure}[h]
     \begin{center}
       \includegraphics[height=${1:5}cm]{${2:<chemin d'accès>}
       \caption{${3:<légende de l'image>}}
     \end{center}
   \end{figure}
endsnippet

